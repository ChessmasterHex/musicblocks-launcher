{
    "app-id": "org.sugarlabs.Musicblocks",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.36",
    "sdk": "org.gnome.Sdk",
    "command": "run.sh",
    "finish-args": [
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=host"
    ],
    "modules": [
        {
            "name": "run",
            "buildsystem": "simple",
            "build-commands": [
                "install -D run.sh /app/bin/run.sh",
                "install -D main.py /app/bin/main.py",
                "install -D webview.ui /app/bin/webview.ui",
                "cp -ra main/* /app/bin/",
                "install -D org.sugarlabs.Musicblocks.appdata.xml /app/share/metainfo/org.sugarlabs.MusicBlocks.appdata.xml",
                "install -D org.sugarlabs.Musicblocks.svg /app/share/icons/hicolor/55x55/apps/org.sugarlabs.Musicblocks.svg"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "musicblocks",
                    "dest": "main"
                },
                {
                    "type": "file",
                    "path": "main.py"
                },
                {
                    "type": "file",
                    "path": "run.sh"
                },
                {
                    "type": "file",
                    "path": "org.sugarlabs.Musicblocks.appdata.xml"
                },
                {
                    "type": "file",
                    "path": "webview.ui"
                }
            ]
        }
    ]
}
