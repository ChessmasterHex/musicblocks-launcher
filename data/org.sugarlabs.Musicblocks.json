{
    "app-id": "org.sugarlabs.Musicblocks",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.36",
    "sdk": "org.gnome.Sdk",
    "command": "launcher",
    "finish-args": [
        "--share=network",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--socket=pulseaudio",
        "--env=DATA_PATH=/app/share",
        "--env=SCRIPTS_PATH=/app/bin"
    ],
    "modules": [
        {
            "name": "musicblocks",
            "buildsystem": "simple",
            "build-commands": [
                "cp -ra musicblocks/* /app/share/musicblocks/"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/sugarlabs/musicblocks",
                    "tag": "v3.1",
                    "commit": "5a0e5fc244acd8fa806f78a937165cc2a528e68e",
                    "dest": "musicblocks"
                }
            ]
        },
        {
            "name": "launcher",
            "buildsystem": "simple",
            "build-commands": [
                "python3 setup.py install --prefix=${FLATPAK_DEST}"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/sugarlabs/musicblocks-launcher",
                    "commit": "7ed3335d9c797b13a9c56e46d98a0e16463e5e9d",
                    "dest": "launcher"
                }
            ]
        }
    ]
}
